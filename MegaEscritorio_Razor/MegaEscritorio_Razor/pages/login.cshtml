@{
    var username = "";
    var password = "";
    var errorMessage = "";

    if (IsPost)
    {
        username = Request["username"];
        password = Request["password"];
        if (WebSecurity.Login(username, password, true))
        {
            Response.Redirect("~/pages/Home");
        }
        else
        {
            errorMessage = "Login was not successful.";
        }
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="@Href("~/mainStyle.css")" type="text/css" />
    <title>Login</title>
</head>
<body>
    <h1>Login</h1>
    <form method="post">
        @if (WebSecurity.IsAuthenticated)
        {
            <p>
                You are currently logged in as @WebSecurity.CurrentUserName.
                <a href="@Href("~/pages/Logout")">Log out</a>
            </p>
        }
        <p>
            <label for="username">Username:</label><br />
            <input type="text" name="username" id="username" value="" />
        </p>
        <p>
            <label for="password">Password:</label><br />
            <input type="password" name="password" id="password" value="" />
        </p>
        <p>
            <input type="submit" value="Submit" />
        </p>

        <p>No user name? <a href="@Href("~/pages/Register")">Register</a></p>
        <p><a href="@Href("~/pages/Home")">Return to home page</a></p>

    </form>
    <p>
        @if (errorMessage != "")
        {
            <span class="errorMessage">@errorMessage</span>
        }
    </p>
</body>
</html>
